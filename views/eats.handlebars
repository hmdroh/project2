          <img src="{{image_url}}">
        </div>
        <div class="card-content">
          {{!--
          <a href="/recipe/{{recipe_id}}">{{title}}</a> --}}
          <a href="/recipe/{{recipe_id}}">{{title}}</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<div class="row">
  <div class="col s12 m6 l4">
    <a href="/eats/{{page.nextOffset}}" class="waves-effect waves-light btn">Next page</a>
