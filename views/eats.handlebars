      <div class="col s12 m6 l4">
        <a href="/eats/{{page.nextOffset}}" class="waves-effect waves-light btn">
          <i class="material-icons left">navigate_before</i>Next page</a>
      </div>
    </div>{{/if}}


  <div class="row">

    {{#each boo}}
