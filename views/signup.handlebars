<div class="container">
  <div class="row">
    <form class="signup col s12">
      <h4>Sign-up</h4>
      <div class="input-field col s12 m6 l6">
        <p>Email</p>
        <input id="email-input" type="email" class="form-control" required="">
      </div>
      <div class="input-field col s12 m6 l6">
        <p>Password</p>
        <input id="password-input" type="password" class="form-control" required="">
      </div>
      {{!--
      <div style="display: none" id="alert" class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <span class="msg"></span>
      </div> --}}
      <div class="input-field col s12 m6 l6">
        <p>First Name</p>
        <input id="first_name" type="text" class="form-control" required="">
      </div>
      <div class="input-field col s12 m6 l6">
        <p>Last Name</p>
        <input id="last_name" type="text" class="form-control" required="">
      </div>

      <div class="input-field col s12 m6 l6">
        <p>Nickname (optional)</p>
        <input id="display-name" type="text" class="form-control" required="">
      </div>

      <div class="input-field col s12 m6 l6">
        <p>Date of Birth</p>
        <input type="text" class="datepicker" id="DOB" required="">
      </div>

      <div class="input-field col s12 m6 l6">
        <p>Gender</p>
        <select class="gender">
          <option value="" disabled selected></option>
          <option value="male">Male</option>
          <option value="female">Female</option>
      </div>

      <div class="input-field col s12 m6 l6">
        <p>Activity Level</p>
        <select class="activity-level">
          <option value="" disabled selected></option>
          <option value="1">1 (Not active)</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5 (Very active)</option>
        </select>
      </div>

      <div class="input-field col s12 m6 l6">
        <p>Activities, choose all that apply</p>
        <select multiple class="activities">
          <option value="walking">Walking</option>
          <option value="running">Running</option>
          <option value="hiking">Hiking</option>
          <option value="biking">Biking</option>
          <option value="swimming">Swimming</option>
          <option value="soccer">Yoga</option>
          <option value="basketball">Martial Arts</option>
        </select>
      </div>

      <div class="input-field col s12 m6 l6">
        <p>Food Restrictions</p>
        <select multiple class="activities">
          <option value="basketball">None</option>
          <optgroup label="Dietary">
            <option value="gluten-free">Gluten Free</option>
            <option value="dairy-free">Dairy Free</option>
            <option value="vegan">Vegan</option>
            <option value="vegetarian">Vegetarian</option>
            <option value="paleo">Paleo</option>
            <option value="kosher">Kosher</option>
            {{!--
            <option value="basketball">None</option> --}}
          </optgroup>
          <optgroup label="Allergies">
            <option value="nuts">Nuts</option>
            <option value="shellfish">Shellfish</option>
            <option value="wheat">Wheat</option>
            <option value="soy">Soy</option>
            <option value="eggs">Eggs</option>
            {{!--
            <option value="basketball">None</option> --}}
          </optgroup>
        </select>
      </div>

      <div class="col s12 m6 l6">
        <button type="submit" class="btn btn-default">Sign Up</button>
      </div>
    </form>
