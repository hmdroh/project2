    <div class="container">
    <div class="row">
        <form class="signup col s12">
            <h4>Sign-up</h4>
          <div class="input-field col s12 m6 l6">
            
            <p>Email<span class="red-text" id="email_danger" style="display:none;"> * Required Field</span></p>
                
            <input id="email-input" type="email" class="form-control">
        
            
          </div>
          <div class="input-field col s12 m6 l6">
            <p>Password<span class="red-text" id="password_danger" style="display:none;"> * Required Field</span></p>
            <input id="password-input" type="password" class="form-control">
          </div>
          {{!-- <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div> --}}
          <div class="input-field col s12 m6 l6">
            <p>First Name<span class="red-text" id="first_name_danger" style="display:none;"> * Required Field</span></p>
            <input id="first_name" type="text" class="form-control">
          </div>
          <div class="input-field col s12 m6 l6">
            <p>Last Name<span class="red-text" id="last_name_danger" style="display:none;"> * Required Field</span></p>
            <input id="last_name" type="text" class="form-control">
          </div>
          
          <div class="input-field col s12 m6 l6">
            <p>Nickname<span class="red-text" id="display-name_danger" style="display:none;"> * Required Field</span></p>
            <input id="display-name" type="text" class="form-control">
          </div>

          <div class="input-field col s12 m6 l6">
            <p>Date of Birth<span class="red-text" id="DOB_danger" style="display:none;"> * Required Field</span></p>
            <input type="text" class="datepicker" id="DOB">
          </div>

          <div class="input-field col s12 m6 l6">
            <p>Gender<span class="red-text" id="gender_danger" style="display:none;"> * Required Field</span></p>
            <select class="gender" name="gender" id="gender">
                <option value="" disabled selected></option>
                <option value="M">Male</option>
                <option value="F">Female</option>
            </select>
          </div>

          <div class="input-field col s12 m6 l6">
            <p>Activity Level<span class="red-text" id="activity-level_danger" style="display:none;"> * Required Field</span></p>
            <select class="activity-level" id="activity-level" name="activity-level">
                <option value="" disabled selected></option>
                <option value="1">1 (Not active)</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5 (Very active)</option>
            </select>
          </div>

          <div class="input-field col s12 m6 l6">
            <p>Activities<span class="red-text" id="activities_danger" style="display:none;"> * Required Field</span></p>
            <select multiple class="activities" name="activities" id="activities">
                <option value="walking">Walking</option>
                <option value="running">Running</option>
                <option value="hiking">Hiking</option>
                <option value="biking">Biking</option>
                <option value="swimming">Swimming</option>
                <option value="yoga">Yoga</option>
                <option value="martial-arts">Martial Arts</option>
            </select>
          </div>

          <div class="input-field col s12 m6 l6">
            <p>Food Restrictions<span class="red-text" id="food_danger" style="display:none;"> * Required Field</span></p>
            <select multiple class="food" name="food" id="food">
                <optgroup label="Dietary">
                    <option value="gluten-free">Gluten Free</option>
                    <option value="dairy-free">Dairy Free</option>
                    <option value="vegan">Vegan</option>
                    <option value="vegetarian">Vegetarian</option>
                    <option value="paleo">Paleo</option>
                    <option value="kosher">Kosher</option>
                    <option value="none">None</option>
                </optgroup>
                </select></div>
            <div class="input-field col s12 m6 l6">
            <p>Food Allergies<span class="red-text" id="allergies_danger" style="display:none;"> * Required Field</span></p>
            <select multiple class="allergies" name="allergies" id="allergies">
                <optgroup label="Allergies">
                    <option value="nuts">Nuts</option>
                    <option value="shellfish">Shellfish</option>
                    <option value="wheat">Wheat</option>
                    <option value="soy">Soy</option>
                    <option value="eggs">Eggs</option>
                    <option value="none">None</option>
                </optgroup>
            </select>
          </div>

          <div class="input-field col s12 m6 l6">
            <p>Zip Code<span class="red-text" id="zip_danger" style="display:none;"> * Required Field</span></p>
            <input id="zip-code" type="text" class="form-control">
            <a class="waves-effect waves-light btn-small" id="getzipcode">Auto-Detect</a>

          </div>
        
        <div class="row">
          <div class="col s12 m12 l12">
            <button type="submit" class="btn btn-default">Sign Up</button>
          </div>
        </div>
        </form>
